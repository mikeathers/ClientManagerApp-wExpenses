@model DLS_Technologies.ViewModels.ExpenseFormViewModel

@using (Html.BeginForm("SaveExpenseForm", "ExpenseForms"))
{

    @Html.ValidationSummary()
    @Html.AntiForgeryToken()


    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.DateAdded)

    <button id="showNewExpenseFormBtn" class="btn btn-primary">Add New Expense Form</button>
    <br /><br />


   

    <div hidden="hidden" id="addNewExpenseFormBtn" class="form-group">
            @Html.LabelFor(m => m.Name)
                <div class="input-group" style="width:300px;">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Form Name.." })
                    <span class="input-group-btn">
                        <button class="btn btn-success" type="submit">Add</button>
                    </span>
                </div>
    </div>
    <br />
}
